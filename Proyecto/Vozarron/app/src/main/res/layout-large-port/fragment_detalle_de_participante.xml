<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    android:weightSum="20"
    tools:context="android.electiva.uniquindio.edu.co.vozarron.fragments.DetalleDeParticipanteFragment">

    <TextView
        android:id="@+id/detalle_participante_nombre"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="4"
        android:textSize="@dimen/titulos"
        android:gravity="center_horizontal|center_vertical"
        android:background="@color/colorPrimary"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="16"
        android:weightSum="5"
        >

        <ImageView
            android:id="@+id/detalle_participante_foto"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:contentDescription=""
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:layout_weight="2"
            />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:background="@color/colorPrimary"
            android:layout_weight="3"
            >
            <TextView
                android:id="@+id/text_edad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/edad"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="5dp"
                />
            <TextView
                android:id="@+id/detalle_participante_edad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/text_edad"

                />
            <TextView
                android:id="@+id/detalle_participante_estado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                />
            <TextView
                android:id="@+id/detalle_participante_relacion_u"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_edad"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="5dp"/>
            <TextView
                android:id="@+id/text_nombre_entrenador"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nombre_entrenador"
                android:layout_below="@id/detalle_participante_relacion_u"
                android:layout_marginRight="2dp"
                />
            <TextView
                android:id="@+id/detalle_participante_nombre_entrenador"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/detalle_participante_relacion_u"
                android:layout_toRightOf="@id/text_nombre_entrenador"
                />
        </RelativeLayout>


    </LinearLayout>



</LinearLayout>
