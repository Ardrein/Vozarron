<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:padding="8dp"
    android:layout_margin="6dp"

    card_view:cardCornerRadius="5dp"
    card_view:cardBackgroundColor="@color/colorPrimary"
    card_view:cardElevation="5dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        >

        <ImageView
            android:id="@+id/resumen_foto_participante"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="35dp"
            />

        <TextView
            android:id="@+id/resumen_nombre_participante"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/texto_lista"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="7dp"
            android:layout_toRightOf="@+id/resumen_foto_participante"

            />

        <TextView
            android:id="@+id/resumen_relacion_u_participante"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/texto_lista"
            android:layout_toRightOf="@+id/resumen_foto_participante"
            android:layout_below="@+id/resumen_nombre_participante"

            />



    </RelativeLayout>

</android.support.v7.widget.CardView>