<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/vozarro5</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="buttonStyle">@style/estilo_botones</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/texto_normal</item>
    </style>

    <style name="DialogoTitulo" parent="android:Theme.Holo.Dialog">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorPrimaryDark</item>

    </style>

    <style  name="estilo_botones" parent="android:style/Widget.Button">
        <item name="android:background">@drawable/fondo_boton</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/texto_botones</item>

    </style>

</resources>
